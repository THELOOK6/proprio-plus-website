---
import { type Icon as IconType } from '@lucide/astro';

interface VisionItem {
  icon: typeof IconType;
  title: string;
  description: string;
}

const { mainTitle, items = [] } = Astro.props;
---
<section class="py-16 px-4 text-center max-w-7xl mx-auto">
  <h2 class="text-3xl font-bold mb-12 text-[#762600]" data-aos="fade-up">{mainTitle}</h2>
  <div class="grid gap-8 md:grid-cols-3">
    {items.map((item, index) => (
      <div
        class="flex flex-col items-center"
        data-aos="fade-up"
        data-aos-delay={index * 100} // Stagger by 100ms per item
        key={index}
      >
        <div class="p-6 bg-white rounded-lg shadow-md w-fit mb-4">
          <item.icon class="w-8 h-8 text-orange-700"/>
        </div>
        <h3 class="text-xl font-semibold mb-2 text-[#762600]">{item.title}</h3>
        <p class="text-gray-600 max-w-xs">{item.description}</p>
      </div>
    ))}
  </div>
</section>

