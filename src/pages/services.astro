---
import Layout from '@layouts/Layout.astro';
import Button from '@components/ui/Button.astro';
import InnerHero from '@components/sections/InnerHero.astro';
import innerHeroImage from '../assets/images/home/city-skyline-2-dark.jpg';
import { getBackgroundColor, getTextColor, getHeadlineColor, getEyebrowColor } from '@utils/styleUtils';
import { featureLists } from '@data/features';
import Services from '@components/sections/Services.astro';

const title = 'Services';
const backgroundImage = innerHeroImage;
const opacity = '0.2';

const seoTitle = "Services";
const seoDescription = "Explore our full range of property management services tailored for Montreal landlords—rent collection, tenant screening, maintenance & more.";

const FooterCta = {
    eyebrow: "Join The Community",
    title: ' Let Us Handle Your Property, So You Don’t Have To',
    description: "Whether you're an experienced investor or a first-time landlord, we offer full-service property management tailored to your needs. Let us take care of the details, so you can focus on what matters most.",
    hideCta: false,
    button: {
        text: 'Get in Touch',
        link: '/contact',
        target: '_blank'
    }
}

const heroContent = {
    title: title,
    backgroundImage: backgroundImage,
    overlayOpacity: opacity,
}

const featuresSection = {
    title: "Professional Property Management, Tailored to Every Need",
    description: "We offer a full spectrum of property management services designed to simplify ownership, enhance tenant satisfaction, and protect the long-term value of your investment. Our team brings together operational expertise, responsive communication, and industry insight to deliver consistent, high-quality results across every property we manage. Whether you own a single-unit rental or a multi-family portfolio, we provide the structure, systems, and support to keep your property running smoothly—day in and day out.",
    features: featureLists.main.features,
}

const backgrounds = ['base', 'light', 'dark'] as const;

---

<Layout footerCta={FooterCta} title={seoTitle} description={seoDescription} >
    <InnerHero content={heroContent} />
    <Services content={featuresSection} padding="base" background="light" />
</Layout>
